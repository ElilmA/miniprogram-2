<!--custom-tab-bar/index.wxml-->
<van-tabbar active="{{ active }}" bind:change="onChange" active-color="#0f0f0f">
  <van-tabbar-item wx:for="{{ list }}" icon="{{ index == 0 ? '' : item.icon }}" wx:key="index" class="{{index == 0 ? 'tab-bar' : 'tab-bar-2'}}">
    {{item.text}}
  </van-tabbar-item>
</van-tabbar>