/* pages/patrol.wxss */
.patrol-title{
  width: calc(100% - 80rpx);
  height: 140rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border: 1rpx solid #e9eeff;
  border-radius: 8rpx;
  margin: 20rpx 40rpx;
  background-color: #f4f7ff;
  font-weight: 500;
}

.patrol-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100% - 80rpx);
  margin: 20rpx;
  padding: 20rpx;
  background-color: #eee;
  border-radius: 10rpx;
}
.item-left{
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item-right{
  flex:4;
  display: flex;
  align-items: center;
  justify-content: center;
}
.patrol-item-wrap{
  margin: 10rpx 20rpx;

}
.patrolOn.patrol-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100% - 80rpx);
  padding: 40rpx 20rpx;
  background-color: #01A7F0;
  color: #fff;
  border-radius: 10rpx;
}
.patrolOff.patrol-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100% - 80rpx);
  margin: 20rpx;
  padding: 20rpx;
  background-color: #AAAAAA;
  border-radius: 10rpx;
  color: #000;
}
.van-cell-text{
  letter-spacing: 3rpx;
}